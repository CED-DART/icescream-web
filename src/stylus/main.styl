/** Stylus Styles */
@require '../../node_modules/vuetify/src/stylus/settings/_colors'

$theme := {
  // primary: $red.darken-2
  primary: $orange.darken-1
  accent: $red.accent-2
  secondary: $grey.lighten-1
  info: $blue.lighten-1
  warning: $amber.lighten-1
  error: $red.lighten-1
  success: $green.darken-1
}

@import '../../node_modules/vuetify/src/stylus/main'

.custom-loader {
    animation: loader 1s infinite;
    display: flex;
}
@-moz-keyframes loader {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
}
@-webkit-keyframes loader {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
}
@-o-keyframes loader {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
}
@keyframes loader {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
}